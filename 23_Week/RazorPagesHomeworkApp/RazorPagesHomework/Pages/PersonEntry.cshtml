@page
@model RazorPagesHomework.Pages.PersonEntryModel
@{
    ViewData["Title"] = "Person Entry";
}

<h1>Person Entry Forms</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="FirstName" />
        <input asp-for="FirstName" type="text" placeholder="First Name" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" />
        <input asp-for="LastName" type="text" placeholder="Last Name" />
    </div>
    <button type="submit">Say Hi</button>
</form>
<br/>
<h2> List of People</h2>
@foreach(var item in Model.People)
{
    <h3>@item</h3>
}