@page
@model RazorPagesMiniProject.Pages.AddressEntryModel
@{
    ViewData["Title"] = "Address Entry Form";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="StreetAddress" />
        <input asp-for="StreetAddress" type="text" placeholder="Address"/>
    </div>
    <div class="form-group">
        <label asp-for="City" />
        <input asp-for="City" type="text" placeholder="City" />
    </div>
    <div class="form-group">
        <label asp-for="State" />
        <input asp-for="State" type="text" placeholder="State" />
    </div>
    <div class="form-group">
        <label asp-for="ZipCode" />
        <input asp-for="ZipCode" type="text" placeholder="Zip code" />
    </div>
    <button type="submit">Submit</button>
</form>
<br />
<h2>List of Addresses</h2>
@foreach(var item in Model.Addresses)
{
    <h3>@item</h3>
}